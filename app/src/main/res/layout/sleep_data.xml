<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f4d0e3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/wavesky">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <!-- First Question -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How many hours did you\nsleep last night?"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/sleepHoursRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="28dp">

                <!-- RadioButtons for sleep hours options -->
                <RadioButton
                    android:id="@+id/sleepHoursOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="less than 3"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/sleepHoursOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textSize="20sp" />
                <RadioButton
                    android:id="@+id/sleepHoursOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/sleepHoursOption10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.5"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/sleepHoursOption15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="10"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.5"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepHoursOption19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="20sp"/>

                <!-- Add other RadioButtons for sleep hour options similarly -->

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <!-- Second Question -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How would you rate \nyour overall sleep \n        last night?"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/sleepRateRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="28dp">

                <!-- RadioButtons for sleep rate options -->
                <RadioButton
                    android:id="@+id/sleepRateOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very good"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/sleepRateOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fairly good"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepRateOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fairly bad"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepRateOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very bad"
                    android:textSize="20sp"/>

                <!-- Add other RadioButtons for sleep rate options similarly -->

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <!-- Third Question -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="         How often did you \n       have trouble staying \n     awake yesterday while \n     in class, eating meals, or \n   engaging in social activity?"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/sleepTroubleRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="28dp">

                <!-- RadioButtons for sleep trouble options -->
                <RadioButton
                    android:id="@+id/sleepTroubleOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/sleepTroubleOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/sleepTroubleOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twice"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sleepTroubleOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three or more times ..."
                    android:textSize="20sp"/>

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end" />
                <!-- Button to move to SocialData -->
                <Button
                    android:id="@+id/buttonMoveToSocialData"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Next "
                    android:drawableRight="@drawable/next2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>