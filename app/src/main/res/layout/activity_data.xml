<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f4d0e3" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/wavesky">

            <!-- Question 1: Alone Working -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alone Working"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/aloneWorkingRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="33dp">

                <!-- RadioButtons for Alone Working options -->
                <RadioButton
                    android:id="@+id/aloneWorkingOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0-10%"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/aloneWorkingOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-25%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/aloneWorkingOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-50%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/aloneWorkingOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51-75%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/aloneWorkingOption5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76-100%"
                    android:textSize="20sp"/>

            </RadioGroup>

            <!-- Question 2: Alone Relaxing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alone Relaxing"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/aloneRelaxingRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="33dp">

                <!-- RadioButtons for Alone Relaxing options -->
                <RadioButton
                    android:id="@+id/aloneRelaxingOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0-10%"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/aloneRelaxingOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-25%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/aloneRelaxingOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-50%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/aloneRelaxingOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51-75%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/aloneRelaxingOption5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76-100%"
                    android:textSize="20sp"/>
            </RadioGroup>

            <!-- Question 3: With Others Working -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="With Other People Working"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/withOthersWorkingRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="33dp">

                <!-- RadioButtons for With Others Working options -->
                <RadioButton
                    android:id="@+id/OthersWorkingOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0-10%"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/OthersWorkingOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-25%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/OthersWorkingOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-50%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/OthersWorkingOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51-75%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/OthersWorkingOption5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76-100%"
                    android:textSize="20sp"/>

            </RadioGroup>

            <!-- Question 4: With Others Relaxing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="With Other People Relaxing"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/withOthersRelaxingRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="33dp">

                <!-- RadioButtons for With Others Relaxing options -->
                <RadioButton
                    android:id="@+id/OthersRelaxingOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0-10%"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/OthersRelaxingOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-25%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/OthersRelaxingOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-50%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/OthersRelaxingOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51-75%"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/OthersRelaxingOption5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76-100%"
                    android:textSize="20sp"/>

            </RadioGroup>
            <!-- Button to display variable values -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Button to display variable values -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end" />

                <!-- Button to move to BehaviourData -->
                <Button
                    android:id="@+id/buttonMoveToBehaviourData"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Next "
                    android:drawableRight="@drawable/next2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>