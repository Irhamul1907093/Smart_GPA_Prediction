<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f4d0e3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/wavesky">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you feel at all\nhappy right now?"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/happyRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <RadioButton
                    android:id="@+id/happyYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:layout_marginEnd="20dp"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/happyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="20sp"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If you answered 'Yes' on the first\n"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\nquestion,how happy do you feel?"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/happyIntensityRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">


                    <RadioButton
                        android:id="@+id/happyALittleBit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A little bit"
                        android:textSize="20sp"
                        />
                    <RadioButton
                        android:id="@+id/happysomewhat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="somewhat"
                        android:textSize="20sp"
                        android:layout_below="@id/happyALittleBit"/>


                    <RadioButton
                        android:id="@+id/happyverymuch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="very much"
                        android:textSize="20sp"/>
                    <RadioButton
                        android:id="@+id/happyextreme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="extremely"
                        android:textSize="20sp"/>

                    <!-- Other radio buttons for different happiness levels -->
                </RadioGroup>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you feel AT\nALL sad right now?"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/sadRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <RadioButton
                    android:id="@+id/sadYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="20sp"
                    android:layout_marginEnd="20dp"/>

                <RadioButton
                    android:id="@+id/sadNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="20sp"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"

                    app:cardCornerRadius="18dp"
                    app:cardElevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_summer_dog"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If you answered 'Yes' on the third\nquestion, how sad do you feel?"
                        android:textSize="22sp"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/sadIntensityRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">


                <RadioButton
                    android:id="@+id/sadALittleBit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A little bit"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sadsomewhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="somewhat"
                    android:textSize="20sp"/>



                <RadioButton
                    android:id="@+id/sadverymuch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="very much"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/sadextreme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="extremely"
                    android:textSize="20sp"/>

                <!-- Other radio buttons for different sadness levels -->
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end" />

                <Button
                    android:id="@+id/buttonMoveToStressData"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Next "
                    android:drawableRight="@drawable/next2" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>