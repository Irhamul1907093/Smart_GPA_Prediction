<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/wavesky">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f4d0e3"
        android:layout_gravity="top" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"

            app:cardCornerRadius="18dp"
            app:cardElevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background_summer_dog"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    How many people did you \n have contact with yesterday?"
                android:textSize="22sp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/contactRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="44dp">

        <RadioButton
            android:id="@+id/contactOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-4 persons"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/contactOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-9 persons"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/contactOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-19 persons"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/contactOption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-49 persons"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/contactOption5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50-99 persons"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/contactOption6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="over 100 persons"
            android:textSize="20sp"/>

        <!-- Add other RadioButtons for contact options similarly -->

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="end" />
        <!-- Button to move to ActivityData -->
        <Button
            android:id="@+id/buttonMoveToActivityData"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Next "
            android:drawableRight="@drawable/next2"/>
    </LinearLayout>
</LinearLayout>
